<UserControl x:Class="moddingSuite.View.Ndfbin.ValueEditing.LocaleHashEditingTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Extension1="clr-namespace:moddingSuite.View.Extension" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox IsTabStop="True" Extension1:Masking.Mask="([0-9a-fA-F]{0,16})" Text="{Binding Path=Value.Value,Converter={StaticResource LocalisationHashValueConverter}}" />
    </Grid>
</UserControl>
