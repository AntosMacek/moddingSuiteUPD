<UserControl x:Class="moddingSuite.View.Ndfbin.ValueEditing.FloatEditingTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Extension1="clr-namespace:moddingSuite.View.Extension" mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="200">
    <Grid>
        <TextBox Extension1:Masking.Mask="([\-0-9][0-9]*\.?[0-9]*)" Text="{Binding Path=Value.Value}" />
    </Grid>
</UserControl>
